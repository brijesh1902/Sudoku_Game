<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <com.brizzs.sudoku.libs.SudokuBoard
        android:id="@+id/sudoku_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boardColor="@color/black"
        app:letterColor="@color/black"
        app:letterSolveColor="@color/solve_green"
        app:cellsHighlightColor="@color/highlight_blue"
        app:cellFillColor="@color/fill_blue"
        android:layout_marginTop="8dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="12dp"
        >
        <Button
            android:id="@+id/one"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/two"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/three"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/four"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/five"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/six"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/seven"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/eight"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>
        <Button
            android:id="@+id/nine"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_solve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOLVE"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginVertical="12dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="8dp"
        android:background="@drawable/btn_round_rec_16"
        />

</LinearLayout>